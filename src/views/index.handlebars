{{>header}}
<!-- Header // -->

{{>fullBanner}}
<!-- Full Banner // -->

<div class="container home-about text-center">
    <div class="col-md-8 mx-auto px-0">
        {{{home.content}}}
    </div>
</div>

<div class="banner-bottom">
    <img src="{{bannerPape.url}}" width="100%" alt="minibanner-bratva">
</div>
<!-- Content // -->
<div class="container-fluid p-0 mt-3 forms-home">
    <div class="row">
        <div class="col-md bg-black miniforms d-flex flex-column justify-content-center text-white text-right py-xl-5">
            <h1>BratvaClub®</h1>
            <p>{{{partials.subtitle1}}}</p>

            <!-- Form newsletter // -->
            <form class="ml-auto mt-xl-4 newsForm">
                <div class="form-group">
                    <input type="email" class="form-control subEmail" id="subEmail" autocomplete="email"
                        aria-describedby="emailHelp" placeholder="{{partials.mail}}">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control subName" autocomplete="full-name" id="subName"
                        placeholder="{{partials.fullName}}">
                </div>

                <button type="submit" class="btn btn-gray">{{partials.enter}}</button>
            </form>
        </div>
        <!-- Newsletter // -->

        <div class="col-md miniforms d-flex flex-column justify-content-center bg-gray py-5" id="validateProduct">
            <h1>BratvaOriginals®</h1>
            <p>{{{partials.subtitle2}}}</p>

            <!-- Form consulta codigo // -->
            <form class="mr-auto mt-4 formValidateCode">
                <div class="form-group">
                    <input type="email" class="form-control consultMail" id="consultMail" autocomplete="email"
                        aria-describedby="emailHelp" placeholder="{{partials.mail}}">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control consultCode" autocomplete="code" id="consultCode"
                        placeholder="{{partials.productCode}}">
                </div>
                <!-- modalConsult -->
                <button type="submit" class="btn btn-black">{{partials.consult}}</button>

                <small>
                    <a href="#">{{partials.findCode}}</a>
                </small>
            </form>
        </div>
        <!-- Consulta codigo // -->
    </div>
</div>
<!-- Content // -->
