    <div class="container">
        <div class="col">
            <h1>Bratva Global Certification</h1>
            <div class="row mt-5">

                <div class="col-md-3 mb-2 d-flex align-items-center justify-content-center">
                    <div class="thumbWrapper">
                        <img src="/img/iso-1.png" alt="">
                    </div>
                </div>

                <div class="col-md-3 mb-2 d-flex align-items-center justify-content-center">
                    <div class="thumbWrapper">
                        <img src="/img/iso-2.png" alt="">
                    </div>
                </div>

                <div class="col-md-3 mb-2 d-flex align-items-center justify-content-center">
                    <div class="thumbWrapper">
                        <img src="/img/iso-3.png" alt="">
                    </div>
                </div>

                <div class="col-md-3 mb-2 d-flex align-items-center justify-content-center">
                    <div class="thumbWrapper">
                        <img src="/img/iso-4.png" alt="">
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
