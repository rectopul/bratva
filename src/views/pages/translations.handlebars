<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{>sidebar}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                <!-- Sidebar Toggle (Topbar) -->
                <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                    <i class="fa fa-bars"></i>
                </button>

                <!-- Topbar Search -->

                <!-- Topbar Navbar -->
                {{>navbar}}

            </nav>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-1 text-gray-800">Tradução de {{translateType}}</h1>
                <p class="mb-4">Nesta página você pode traduzir o tipo de conteúdo escolhido para EN e ESP</p>


                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Lista de traduções</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover stripe" id="dataTable" width="100%"
                                cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Linguagem</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Linguagem</th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>
                                <tbody class="listTranslation">
                                    {{#each translateList}}
                                    <tr role="row" class="odd translate-{{id}}">
                                        <td class="sorting_1">
                                            {{name}}
                                            {{title}}
                                        </td>
                                        <td>{{slug}}</td>
                                        <td>
                                            pt-BR
                                            {{#each translations}}
                                            , {{language}}
                                            {{/each}}
                                        </td>
                                        <td>
                                            <!-- Botão de ação Editar // -->
                                            <button type="button"
                                                class="btn btn-datatable btn-icon btn-transparent-dark editTranslate py-0"
                                                data-toggle="modal" data-target="#translateModal" data-id="{{id}}">
                                                <i class="fas fa-language"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    {{else}}
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
{{>logoutModal}}
{{>modals/modalTranslate}}