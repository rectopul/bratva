<!-- Modal -->
<div class="modal fade" id="translateModal" tabindex="-1" role="dialog" aria-labelledby="translateModal"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="carouselEditModalLabel">Editar traduções</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Formulário -->
                <form class="needs-validation formEditTranslate" data-type="{{translateType}}" data-page=""
                    data-product="" novalidate>
                    <input type="hidden" name="page_id" value="">
                    <input type="hidden" name="product_id" value="">
                    <input type="hidden" name="category_id" value="">

                    <div class="form-group">
                        <label for="selectLanguage">Selecione o idioma ao qual deseja traduzir</label>
                        <select class="form-control" name="language" id="selectLanguage">
                            <option value="en">ENG</option>
                            <option value="esp">ESP</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="contentTranslate">Conteúdo</label>
                        <textarea class="form-control" name="contentTranslate" id="contentTranslate" rows="3"
                            placeholder="Informe o texto traduzido"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Salvar tradução</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>