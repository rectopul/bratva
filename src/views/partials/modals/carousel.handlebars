<!-- Modal -->
<div class="modal fade" id="carouselEditModal" tabindex="-1" role="dialog" aria-labelledby="carouselEditModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="carouselEditModalLabel">Editar carrossel</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- FormulÃ¡rio -->
                <form class="needs-validation formEditCarousel" novalidate>
