<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Carossel de imagens</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" data-toggle="modal"
        data-target="#modalCarousel">
        <i class="fas fa-plus fa-sm text-white-50"></i> Adicionar Imagem
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de imagens</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover stripe" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Imagem</th>
                        <th>Data</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Imagem</th>
                        <th>Data</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody class="listCaregories">
                    {{#each carousels}}
                    <tr role="row" class="odd" data-carousel="{{id}}">
                        <td>{{id}}</td>
                        <td class="sorting_1">{{name}}</td>
                        <td>
                            <img src="{{image.url}}" alt="..." class="img-thumbnail" style="max-width: 120px;">
                        </td>
                        <td>{{createdAt}}</td>
                        <td>
                            <button type="button"
                                class="btn btn-datatable btn-icon btn-transparent-dark carouselDestroy py-0"
                                data-id="{{id}}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                    fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" class="feather feather-trash-2">
                                    <polyline points="3 6 5 6 21 6"></polyline>
                                    <path
                                        d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                    </path>
                                    <line x1="10" y1="11" x2="10" y2="17"></line>
                                    <line x1="14" y1="11" x2="14" y2="17"></line>
                                </svg>
                            </button>

                            <button type="button"
                                class="btn btn-datatable btn-icon btn-transparent-dark carouselEdit py-0"
                                data-id="{{id}}">
                                <i class="fas fa-edit"></i>
                            </button>
                        </td>
                    </tr>
                    {{else}}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{>carouselForm}}
{{>modals/carousel}}