body
    &.page
        .navbar-nav .nav-item 
            .nav-link
                color #e4ae59
            &.active
                .nav-link
                    color #fff

        .languagesList
            background-color #fff
            display flex
            flex-direction column
            padding 0
            align-items center
            list-style none
            border-radius 5px
            justify-content flex-start
            margin-bottom 0
            margin-left 16px
            button
                background-color #fff
                color #000
                min-width 80px
                height 50px
                & img
                    margin-right auto
                    display inline-block
                &:focus
                    box-shadow: none
                &:not(:disabled):not(.disabled).active, 
                &.btn-secondary:not(:disabled):not(.disabled):active, 
                &.btn-secondary.dropdown-toggle
                    background-color #fff
                    color #000
                
            .dropdown-menu
                min-width 78px
                max-width 78px
                margin-top -4px
                left 1px

                .dropdown-item
                    height 50px
                    max-height 50px
                    border-radius 0
                    background-color #fff
                    padding 0.375rem 0.75rem
                    display flex
                    align-items center
                    justify-content space-between
                    &:last-child
                        border-bottom-left-radius 5px
                        border-bottom-right-radius: 5px
                    &:hover
                        background-color #e4ae59
            li
                width 80px
                flex 0 0 50px
                padding 15px 16px
                max-height 50px
                display none
                border-radius 5px
                justify-content center
                border solid 1px #999999
                &:first-child
                    display flex
                a
                    display flex
                    justify-content space-between
                    height 100%
                    flex 0 0 100%
                    align-items center
                    color #cecece
                    img 
                        height 100%
                        width: auto
            

.nav-header
    font-weight 700
    height 100px
    background-color #000 !important
    /*Fonts*/
    // Style for "Início"
    color #808080
    font-size 16px
    font-weight 700
    font-style bold
    // Text style for "Início"
    color #000000
    & .mobile-back
        position fixed
        z-index 90
        background-color rgba(0,0,0,0.7)
        top 0
        left 0
        width 100%
        height 100%
        display none
    @media screen and (max-width: 480px)
        &  .page-menu
            position fixed
            z-index 99
            position fixed
            background-color rgba(0,0,0,0.7)
            top 0
            left 0
            width 100%
            height 100%
            &.collapsing
                transition none !important
            &.show
                & .mobile-back
                    display block
                & > ul
                    transform translateX(0)
            & a
                &.nav-link, &.active
                    color #fff !important
            & > ul
                width calc(100% - 30px)
                overflow-y auto
                height 100%
                transition transform 300ms linear
                transform translateX(100%)
                background-color #000
                right 0
                top 0
                margin 0
                margin-left auto
                margin-right 0 !important
                position relative
            & ul
                text-align center
                max-width 100%
                z-index 99
                &.dropdown-menu
                    min-width 100% !important
                    background-color #c0c0c0
                    & ul
                        border 0
                    & li
                        max-height initial
                        padding 0
                        &:hover
                            background-color #c0c0c0
                    & a
                        display flex
                        align-items center
                        justify-content center
                        position relative
                        padding 15px
                        &:after
                            content none
                    & i.arrow
                        display flex
                        width: 0; 
                        height: 0; 
                        border-top: 10px solid transparent;
                        border-bottom: 10px solid transparent;
                        border-left: 10px solid #000;
                        position absolute
                        right 15px
                        top 50%
                        margin-top -10px
                & li
                    margin 10px 0 !important
            & .btn-dark
                margin-right 0
                margin-top 30px
                width 100%
                z-index 98
                position relative
                &.btn-validateProd
                    background-color #e4ae59
                    color #000000

