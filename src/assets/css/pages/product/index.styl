.productImage
    background-color transparent
    border 1px solid #bbbbbb
    padding 50px
    border-radius 5px
    background-color #ffffff
    & img
        width 100%
        max-width 227px

.productThumbnails
    
    > div
        border-radius 5px
        background-color #ffffff
        padding 20px
        padding-bottom 20px
        cursor pointer
        &:hover
            opacity .7
    & img
        max-width 100%
.productResume
    & .productTitle
        // Style for "Acetato de"
        color #e4ae59
        font-family "Futura Std"
        font-size 32px
        font-weight 700
    & .productContent
        // Style for "• Solução"
        color #ffffff
        font-family "Futura Std"
        font-size 20px
        font-weight 400
        line-height 30px
        // Text style for "• Solução"
        letter-spacing 0.2px
        & ul
            padding-left 20px

    .btn-dark
        border-radius 5px
        background-color #ffffff
        color #000000
        &:hover
            border-color #fff
            background-color #000
            color #fff

    